page{background:#fff; padding-top:80rpx;}
.newsnavi{  white-space: nowrap;background:#f6f6f6; height:86rpx; line-height:86rpx;width:100%; position:fixed;top:0; z-index:100;}
.newsnavi view{  display:inline-block; width:22%; text-align:center; font-size:26rpx;color:#999;}
.newslistbox{width:96%;margin-left:2%;}
.newslistbox image{width:100%;}
.newslistbox .newtitle{font-size:32rpx; font-weight:bold;  display:block;}
.newcent{display:block; font-size:20rpx;color:#333; margin-top:13rpx;}
.newbot{ overflow:hidden;zoom:1;height:60rpx; line-height:60rpx; border-bottom:2rpx solid #e7e7e7; margin-bottom:30rpx;}
.newbot .name{float:left; font-size:20rpx;color:#999;}
.newbot .pl{float:left;font-size:20rpx;color:#999;}
.newbot .time{float:right;font-size:20rpx;color:#999;}
.active{color:#000 !important;position:relative;}
.active::after{position:absolute;content:'';background:#000;width:30rpx;height:6rpx;top:75rpx;left:40%;}
.zlbox{width:94%;margin:0 auto; overflow:hidden;zoom:1;margin-top:25rpx;}
.zlleft{float:left;width:220rpx;height:160rpx;margin-right:20rpx;}
.zlleft image{width:100%;}
.zltitle{font-size:32rpx;margin-top:-10rpx; display:block;color:#333;}
.zlright{float:left; position: relative;width:65%;height:160rpx;}
.zlbtcontent{ position:absolute;width:100%;overflow:hidden;zoom:1;left:0;bottom:0rpx;}
.zlchu{float:right; padding-left:15rpx;height:30rpx;color:#666;font-size:20rpx;}
.zlreadnb{float:right;color:#666;font-size:20rpx;margin-left:30rpx;}
.zlreadnb image{width:22rpx;height:13rpx; margin-right:5rpx;}