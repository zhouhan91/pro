.newsplboxtop .plbox .comdtilct{border:none;padding-bottom:0;}
.newsbottom{position:fixed;bottom:0;width:100%; background:#fff;height:100rpx;line-height:100rpx; border-top:2rpx solid #e7e7e7; overflow:hidden;zoom:1; z-index:100;}
.newsbottom text,.newsbottom image{float:left;}
.newsbottom input{font-size:32rpx;color:#999; display:block;margin-left:24rpx; width:80%;margin-top:20rpx; }
.xie{width:37rpx;height:34rpx;margin-left:30rpx;margin-top:34rpx;margin-right:30rpx;}
