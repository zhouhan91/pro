.newsplbox{padding:0 30rpx;margin-bottom:40rpx;padding-top:30rpx;}
.plbox{ padding-bottom:0rpx;margin-bottom:28rpx;}
.plcenttop{overflow:hidden;zoom:1;}
.plcenttop .touxiang{float:left;width:50rpx;height:50rpx;overflow:hidden;margin-right:20rpx;border-radius:25rpx;}
.plcenttop .touxiang image{width:100%;height:100%;} 
.plcenttop text{float:left; font-size:28rpx;color:#333;}
.plcontent{font-size: 32rpx;color:#333;margin-top:-30rpx; display:block;}
.more{display:block; font-size:28rpx;color:#ffac40;}
.plbot{overflow:hidden;zoom:1;}
.plbot text{float:left;color:#999;font-size:20rpx;margin-right:30rpx;}
.comdtilct{margin-left:75rpx;margin-top:-40rpx;border-bottom:2rpx solid #e7e7e7;padding-bottom:30rpx;}
.titledz{float:right !important; overflow:hidden;zoom:1;} 
.titledz text{font-size:20rpx !important;color:#999 !important;float:left;margin-top:0.45rem;margin-right:0.5rem;}
.titledz image{width:44rpx;height:44rpx; float:left;}
